#include <iostream>
#include <vector>
using namespace std;
int proverochka(int arr[], int n){
    int sum=0;
    for(int i = 0; i<n;i++){
        if (arr[i]%2==0){
            sum += arr[i];
        }
    }
    return sum;
}
int main() {
    setlocale(LC_ALL,"Russian");
    int n;
    cout << "Введите размер массива: ";
    cin >> n;
    int arr[1000]; // макс размер массива
    for(int i=0;i<n; i++){
        cin >> arr[i];
    }
    int res = proverochka(arr, n);
    cout << "Сумма массива: " << res;
    return 0;
}
